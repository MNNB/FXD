      <a href="#experience">EXPERIENCE</a>
      <a href="#blog">BLOG</a>
      <a href="#about">ABOUT</a>
    </nav>
  </div>

  <script>
    // Scroll icon rotation
    const dotGroup = document.getElementById('scroll-icon')?.querySelector('#dot-group') as SVGGElement;

    function updateDotRotation() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = docHeight > 0 ? scrollTop / docHeight : 0;
      const angle = scrollPercent * 360;
      dotGroup?.setAttribute('transform', `rotate(${angle} 18282 -2933)`);
    }

    updateDotRotation();

    window.addEventListener('scroll', updateDotRotation);
    window.addEventListener('resize', updateDotRotation);

    // Burger menu toggle
    const burgerButton = document.getElementById('burger-button');
    
    if (burgerButton) {
      burgerButton.addEventListener('click', (e) => {
        e.preventDefault();
        document.body.classList.toggle('menu-open');
        console.log('Burger clicked, menu-open class toggled');
      });
    }
  </script>
