<script>
  import { gsap } from "gsap";

  document.addEventListener('DOMContentLoaded', () => {
    const footerHeartIcon = document.getElementById("footer-heart-icon");

    if (footerHeartIcon) {
      gsap.set(footerHeartIcon, { transformOrigin: "50% 50%" });

      const tl = gsap.timeline({ repeat: -1, yoyo: true, repeatDelay: 0.6 }); 
      tl.to(footerHeartIcon, { scale: 1.2, duration: 0.3, ease: "power1.inOut" })
        .to(footerHeartIcon, { scale: 1, duration: 0.4, ease: "power1.inOut" });
    }
  });
</script>

<style>
  /* Ensure footer styles are here or global if Footer.astro doesn't have its own yet */
  .footer {
    padding: var(--space-sm) 4em;
    background: var(--background);
    text-align: center;
    font-family: var(--font-mono);
    font-size: 0.8rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
  }

  .footer-inline {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-sm);
  }

  .footer-logo :global(svg) { /* Assuming Logo.astro's root is an svg */
    height: 0.75rem;
    width: auto;
    transform: none;
    /* margin-right: 1rem; Applied via inline style on Logo component */
  }

  .footer-links {
    font-size: var(--font-size-sm);
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }

  .hero-icon.footer-heart-icon { 
    transform-origin: center; 
    display: inline-block; 
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--space-md) 1rem;
    }
    .footer-content {
      flex-direction: column;
      gap: var(--space-sm);
    }
    .footer-inline {
        margin-bottom: var(--space-sm);
    }
  }
</style>
