---
import accorLogo from '../assets/logos/accor.svg';
import biogenLogo from '../assets/logos/Biogen.svg';
import lorealLogo from '../assets/logos/loreal.svg';
import rgaLogo from '../assets/logos/RGA.svg';
import sanofiLogo from '../assets/logos/Sanofi.svg';
import toyotaLogo from '../assets/logos/Toyota.svg';
import valeoLogo from '../assets/logos/valeo.svg';

const logos = [
  { src: accorLogo.src, alt: 'Accor Logo' },
  { src: biogenLogo.src, alt: 'Biogen Logo' },
  { src: lorealLogo.src, alt: 'L\'Or√©al Logo' },
  { src: rgaLogo.src, alt: 'RGA Logo' },
  { src: sanofiLogo.src, alt: 'Sanofi Logo' },
  { src: toyotaLogo.src, alt: 'Toyota Logo' },
  { src: valeoLogo.src, alt: 'Valeo Logo' },
];
---

<div class="logos-billboard">
  <div class="logos-track">
    <div class="logos-group" aria-hidden="true"> 
      {logos.map((logo) => (
        <img src={logo.src} alt={logo.alt} class="logo-item" />
      ))}
    </div>
    <div class="logos-group"> 
      {logos.map((logo) => (
        <img src={logo.src} alt={logo.alt} class="logo-item" />
      ))}
    </div>
  </div>
</div>

<style>
.logos-billboard {
  width: 100%; 
  overflow: hidden; 
  position: relative; 
  padding: var(--space-sm) 0; 
  background-color: transparent; 
}

/* Left fade effect */
.logos-billboard::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 60px; /* Adjust width of the fade effect as needed */
  background: linear-gradient(to right, var(--background) 20%, transparent 100%); /* Fades from page BG to transparent */
  z-index: 2; /* Ensures it's above the logos-track */
  pointer-events: none; /* Allows clicks to pass through if necessary */
}

/* Right fade effect */
.logos-billboard::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 60px; /* Adjust width of the fade effect as needed */
  background: linear-gradient(to left, var(--background) 20%, transparent 100%); /* Fades from page BG to transparent */
  z-index: 2; /* Ensures it's above the logos-track */
  pointer-events: none; /* Allows clicks to pass through */
}

.logos-track {
  display: flex;
  width: fit-content; 
  animation: billboard 30s linear infinite;
  position: relative; /* Ensure track is a positioned element for z-index stacking if needed */
  z-index: 1; /* Below the fades */
}

.logos-group {
  display: flex; 
  align-items: center;
  flex-shrink: 0; 
  gap: 4rem; 
  padding: 0 2rem; 
}

.logo-item {
  height: 30px;
  width: auto;
  flex-shrink: 0; 
  object-fit: contain;
}

@keyframes billboard {
  0% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(-50%); 
  }
}

.logos-billboard:hover .logos-track {
  animation-play-state: paused;
}

@media (max-width: 768px) {
  .logos-billboard::before,
  .logos-billboard::after {
    width: 30px; /* Smaller fade on mobile */
  }
  .logos-group {
    gap: 2rem;
    padding: 0 1rem;
  }
  .logo-item {
    height: 25px;
  }
  .logos-track {
    animation-duration: 45s;
  }
}
</style>
