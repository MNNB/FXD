---
// Import all logo SVGs directly
import accorLogo from '../assets/logos/accor.svg';
import biogenLogo from '../assets/logos/Biogen.svg';
import lorealLogo from '../assets/logos/loreal.svg';
import rgaLogo from '../assets/logos/RGA.svg';
import sanofiLogo from '../assets/logos/Sanofi.svg';
import toyotaLogo from '../assets/logos/Toyota.svg';
import valeoLogo from '../assets/logos/valeo.svg';

const logos = [
  { src: accorLogo.src, alt: 'Accor Logo' },
  { src: biogenLogo.src, alt: 'Biogen Logo' },
  { src: lorealLogo.src, alt: 'L\'Or√©al Logo' },
  { src: rgaLogo.src, alt: 'RGA Logo' },
  { src: sanofiLogo.src, alt: 'Sanofi Logo' },
  { src: toyotaLogo.src, alt: 'Toyota Logo' },
  { src: valeoLogo.src, alt: 'Valeo Logo' },
];
---

<div class="logos-container">
  <div class="logos-group">
    {logos.map((logo) => (
      <img
        src={logo.src}
        alt={logo.alt}
        class="logo-item"
      />
    ))}
  </div>
  <div class="logos-group">
    {logos.map((logo) => (
      <img
        src={logo.src}
        alt={logo.alt}
        class="logo-item"
      />
    ))}
  </div>
</div>

<style>
.logos-container {
  display: flex;
  width: 100%; /* Ensure container takes full width */
  position: relative;
}

.logo-item {
  /* height: 40px; Consistent height for all logos */
  width: auto;
  flex-shrink: 0;
  padding: 0; /* Remove padding */
  margin: 0; /* Remove margin */
  object-fit: contain; /* Maintain aspect ratio */
}

/* Add styling for the logo groups */
.logos-group {
  animation: billboard 30s linear infinite; /* Adjust duration as needed */
  display: flex;
  align-items: center;
  gap: 4rem; /* Consistent spacing between logos */
  padding: 0 1rem; /* Add padding around the group */
}

/* Keyframes for billboard animation */
@keyframes billboard {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-100%); /* Move by the width of one group */
  }
}

